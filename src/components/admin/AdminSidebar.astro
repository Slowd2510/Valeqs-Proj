---
interface Props {
  currentSection: string;
}

const { currentSection } = Astro.props;

const menuItems = [
  { id: 'dashboard', label: 'Dashboard', icon: 'grid', href: '/admin/dashboard' },
  { id: 'news', label: 'Neuigkeiten', icon: 'newspaper', href: '/admin/news' },
  { id: 'server', label: 'Server-Management', icon: 'server', href: '/admin/server', disabled: true },
  { id: 'users', label: 'Benutzer', icon: 'users', href: '/admin/users', disabled: true },
  { id: 'analytics', label: 'Statistiken', icon: 'chart-bar', href: '/admin/analytics', disabled: true },
  { id: 'settings', label: 'Einstellungen', icon: 'cog', href: '/admin/settings', disabled: true }
];
---

<aside class="admin-sidebar">
  <div class="sidebar-header">
    <h2 class="sidebar-logo">VALEQS</h2>
    <button id="sidebar-toggle" class="sidebar-toggle" aria-label="Toggle sidebar">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon">
        <path d="M18 6L6 18M6 6l12 12"></path>
      </svg>
    </button>
  </div>
  
  <nav class="sidebar-nav">
    <ul class="sidebar-menu">
      {menuItems.map(item => (
        <li class="sidebar-menu-item">
          {!item.disabled ? (
            <a 
              href={item.href} 
              class:list={[
                'sidebar-menu-link',
                { active: currentSection === item.id }
              ]}
              aria-current={currentSection === item.id ? 'page' : undefined}
            >
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sidebar-icon">
                {item.icon === 'grid' && (<><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></>)}
                {item.icon === 'newspaper' && (<><path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2zm0 0a2 2 0 0 1-2-2v-9c0-1.1.9-2 2-2h2"></path><path d="M18 14h-8"></path><path d="M15 18h-5"></path><path d="M10 6h8v4h-8z"></path></>)}
                {item.icon === 'server' && (<><rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect><rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect><line x1="6" y1="6" x2="6.01" y2="6"></line><line x1="6" y1="18" x2="6.01" y2="18"></line></>)}
                {item.icon === 'users' && (<><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></>)}
                {item.icon === 'chart-bar' && (<><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></>)}
                {item.icon === 'cog' && (<><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path></>)}
              </svg>
              <span>{item.label}</span>
            </a>
          ) : (
            <span 
              class="sidebar-menu-link disabled"
              aria-disabled="true"
            >
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sidebar-icon">
                {item.icon === 'grid' && (<><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></>)}
                {item.icon === 'newspaper' && (<><path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2zm0 0a2 2 0 0 1-2-2v-9c0-1.1.9-2 2-2h2"></path><path d="M18 14h-8"></path><path d="M15 18h-5"></path><path d="M10 6h8v4h-8z"></path></>)}
                {item.icon === 'server' && (<><rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect><rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect><line x1="6" y1="6" x2="6.01" y2="6"></line><line x1="6" y1="18" x2="6.01" y2="18"></line></>)}
                {item.icon === 'users' && (<><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></>)}
                {item.icon === 'chart-bar' && (<><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></>)}
                {item.icon === 'cog' && (<><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path></>)}
              </svg>
              <span>{item.label}</span>
            </span>
          )}
        </li>
      ))}
    </ul>
  </nav>
  
  <div class="sidebar-footer">
    <form action="/api/auth/signout" method="POST">
      <button type="submit" class="logout-button">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="sidebar-icon">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
          <polyline points="16 17 21 12 16 7"></polyline>
          <line x1="21" y1="12" x2="9" y2="12"></line>
        </svg>
        <span>Abmelden</span>
      </button>
    </form>
  </div>
</aside>

<script>
  const toggleButton = document.getElementById('sidebar-toggle');
  const sidebar = document.querySelector('.admin-sidebar');
  const adminLayout = document.querySelector('.admin-layout');
  
  // Check if sidebar is collapsed in local storage
  const isSidebarCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
  
  // Set initial state
  if (isSidebarCollapsed) {
    adminLayout?.classList.add('sidebar-collapsed');
    sidebar?.classList.add('collapsed');
  }
  
  toggleButton?.addEventListener('click', () => {
    sidebar?.classList.toggle('collapsed');
    adminLayout?.classList.toggle('sidebar-collapsed');
    
    // Save state to local storage
    const isCollapsed = sidebar?.classList.contains('collapsed');
    localStorage.setItem('sidebarCollapsed', isCollapsed ? 'true' : 'false');
  });
</script>

<style>
  .admin-sidebar {
    display: flex;
    flex-direction: column;
    width: 260px;
    height: 100%;
    background: rgba(255, 255, 255, 0.04);
    backdrop-filter: blur(10px);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    transition: width 0.3s ease;
    overflow: hidden;
  }
  
  .admin-sidebar.collapsed {
    width: 80px;
  }
  
  .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .sidebar-logo {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    color: rgba(255, 255, 255, 0.95);
    letter-spacing: 1px;
  }
  
  .sidebar-toggle {
    background: transparent;
    border: none;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
    border-radius: 6px;
    transition: all 0.2s ease;
  }
  
  .sidebar-toggle:hover {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
  }
  
  .sidebar-toggle .icon {
    width: 18px;
    height: 18px;
  }
  
  .sidebar-nav {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem 1rem;
  }
  
  .sidebar-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .sidebar-menu-item {
    margin-bottom: 0.5rem;
  }
  
  .sidebar-menu-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.2s ease;
  }
  
  .sidebar-menu-link:hover {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.95);
  }
  
  .sidebar-menu-link.active {
    background: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.95);
    font-weight: 500;
  }
  
  .sidebar-menu-link.disabled {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.4);
    cursor: not-allowed;
  }
  
  .sidebar-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }
  
  .sidebar-footer {
    padding: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .logout-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.9rem;
  }
  
  .logout-button:hover {
    background: rgba(220, 38, 38, 0.2);
    border-color: rgba(220, 38, 38, 0.3);
    color: rgba(255, 255, 255, 0.95);
  }
  
  /* Collapsed state styles */
  .admin-sidebar.collapsed .sidebar-menu-link span,
  .admin-sidebar.collapsed .logout-button span,
  .admin-sidebar.collapsed .sidebar-logo {
    display: none;
  }
  
  .admin-sidebar.collapsed .sidebar-menu-link {
    justify-content: center;
    padding: 0.75rem;
  }
  
  .admin-sidebar.collapsed .logout-button {
    justify-content: center;
    padding: 0.75rem;
  }
  
  .admin-sidebar.collapsed .sidebar-header {
    justify-content: center;
    padding: 1.5rem 0;
  }
  
  /* Disabled menu item styles */
  .sidebar-menu-link.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    color: rgba(255, 255, 255, 0.4);
    pointer-events: none;
  }

  .sidebar-menu-link.disabled:hover {
    background: transparent;
    color: rgba(255, 255, 255, 0.4);
  }

  .sidebar-menu-link.disabled .sidebar-icon {
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .admin-sidebar {
      position: fixed;
      z-index: 100;
      transform: translateX(-100%);
      width: 260px;
    }
    
    .admin-sidebar.active {
      transform: translateX(0);
    }
  }
</style>