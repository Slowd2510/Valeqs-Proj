import { getLanguage, loadTranslations } from '../utils/language.js';

// Get language and translations
const userLang = await getLanguage(Astro.request);
const t = await loadTranslations(userLang);
---

<Layout title={userLang === 'de' ? "Server Info | VALEQS" : "Server Info | VALEQS"} activePage="info">
  <div class="info-container">
    <h1 class="page-title" style="font-size: 2.8rem; margin-bottom: 3rem;">Wichtige Befehle & Infos</h1>
    
    <!-- Main content -->
    <div class="command-sections">
      <!-- Basis-Schutz mit Claims -->
      <section class="command-card">
        <div class="card-header">
          <h2>Basis-Schutz mit Claims</h2>
        </div>
        <div class="card-content">
          <p>Ihr habt keinen Bock mehr auf Griefer oder Diebe? Schützt eure Basis mit Claims!</p>
          <p>Drücke F3+G, um die Chunks (Bereiche) zu sehen, die du für dich beanspruchen kannst.</p>
          
          <div class="steps">
            <div class="step">
              <h3>Schritt 1: Claim erstellen</h3>
              <div class="command-item">
                <code>/claim</code>
                <span>Erstelle einen Claim für dich.</span>
              </div>
            </div>
            
            <div class="step">
              <h3>Schritt 2: Claim benennen</h3>
              <div class="command-item">
                <code>/claim setname claim-0 [Name]</code>
                <span>Gib deinem Claim einen Namen.</span>
              </div>
            </div>
            
            <div class="step">
              <h3>Schritt 3+: Claim verwalten</h3>
              <div class="command-list">
                <div class="command-item">
                  <code>/claim addchunk</code>
                  <span>Füge einen Chunk zu deinem Claim hinzu.</span>
                </div>
                <div class="command-item">
                  <code>/claim delchunk</code>
                  <span>Lösche einen Chunk aus deinem Claim.</span>
                </div>
                <div class="command-item">
                  <code>/claim settings</code>
                  <span>Stelle die Rechte von Besuchern und Mitgliedern ein.</span>
                </div>
                <div class="command-item">
                  <code>/claim map</code>
                  <span>Sieh dir den geclaimten Bereich an.</span>
                </div>
                <div class="command-item">
                  <code>/claim add [Spieler]</code>
                  <span>Füge ein Mitglied zu deinem Claim hinzu.</span>
                </div>
                <div class="command-item">
                  <code>/claim remove [Spieler]</code>
                  <span>Entferne ein Mitglied aus deinem Claim.</span>
                </div>
                <div class="command-item">
                  <code>/unclaim [Name]</code>
                  <span>Löse deinen Claim auf.</span>
                </div>
                <div class="command-item">
                  <code>/claim tp [Name]</code>
                  <span>Teleportiere dich zu deinem Claim.</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="info-box">
            <h3>Wichtige Regeln für Claims</h3>
            <p><strong>Maximal 1 Claim mit 25 Chunks pro Spieler</strong></p>
          </div>
          
          <div class="warning-box">
            <p><strong>Nach 14 Tagen Offline-Zeit löst sich der Claim automatisch auf!</strong></p>
          </div>
          
          <div class="upgrade-note">
            <p>Erhalte mehr Claims, Chunks und Offline-Zeit mit einem Rang</p>
            <a href="/ranks" class="rank-button">SHOP</a>
          </div>
        </div>
      </section>

      <!-- Teleportation & Sicherheit -->
      <section class="command-card">
        <div class="card-header">
          <h2>Teleportation & Sicherheit</h2>
        </div>
        <div class="card-content">
          <div class="command-list">
            <div class="command-item">
              <code>/tpa [Name]</code>
              <span>Teleportiere dich zu einem Spieler.</span>
            </div>
            <div class="command-item">
              <code>/tpahere [Name]</code>
              <span>Teleportiere einen Spieler zu dir.</span>
            </div>
            <div class="command-item">
              <code>/tpaccept</code>
              <span>Nehme eine Teleportanfrage an (Alias: /tpyes).</span>
            </div>
            <div class="command-item">
              <code>/tpadecline</code>
              <span>Lehne eine Teleportanfrage ab (Alias: /tpano, /tpdeny).</span>
            </div>
            <div class="command-item">
              <code>/spawn</code>
              <span>Teleportiere dich zum Spawn.</span>
            </div>
          </div>
          
          <div class="info-box security-note">
            <h3>Hinweis zur Sicherheit</h3>
            <p>Passt auf, zu wem ihr euch teleportiert! Manche Spieler stellen Fallen auf!</p>
          </div>
          
          <div class="info-box bedrock-note">
            <h3>Bedrock-Spieler</h3>
            <p><strong>Wichtiger Hinweis:</strong> Bedrock-Spieler müssen /tpaccept und /tpadeny manuell eingeben, da die Auswahl nicht klickbar ist.</p>
          </div>
        </div>
      </section>

      <!-- Weitere nützliche Befehle -->
      <section class="command-card">
        <div class="card-header">
          <h2>Weitere nützliche Befehle</h2>
        </div>
        <div class="card-content">
          <div class="command-list">
            <div class="command-item">
              <code>/sethome, /home</code>
              <span>Setze und nutze ein Home, zu dem du dich teleportieren kannst.</span>
            </div>
            <div class="command-item">
              <code>/delhome</code>
              <span>Lösche ein Home.</span>
            </div>
            <div class="command-item">
              <code>/togglemsg</code>
              <span>Deaktiviere private Nachrichten.</span>
            </div>
            <div class="command-item">
              <code>/toggleignore</code>
              <span>Blockiere Teleportanfragen.</span>
            </div>
            <div class="command-item">
              <code>/ignore [Spieler]</code>
              <span>Erhalte keine privaten Nachrichten mehr von einem bestimmten Spieler.</span>
            </div>
          </div>
        </div>
      </section>
      
      <!-- Images Section Removed -->
      
    </div>
    
    <div class="server-ip">
      <span>Server-IP:</span>
      <code>valeqs.de</code>
      <button id="copy-ip" class="copy-button">Kopieren</button>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const copyButton = document.getElementById('copy-ip');
    
    copyButton?.addEventListener('click', () => {
      navigator.clipboard.writeText('valeqs.de').then(() => {
        // Visual feedback
        copyButton.textContent = 'Kopiert!';
        setTimeout(() => copyButton.textContent = 'Kopieren', 2000);
      });
    });
  });
</script>

