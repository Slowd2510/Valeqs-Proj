---
import Layout from '../layouts/Layout.astro';
import { getLanguage, loadTranslations } from '../utils/language.js';

// Get language and translations
const userLang = await getLanguage(Astro.request);
const t = await loadTranslations(userLang);
---

<Layout title={userLang === 'de' ? "Regeln & Nutzungsbedingungen | VALEQS" : "Rules & Terms | VALEQS"} activePage="terms">
  <div class="terms-container">
    <header class="page-header">
      <h1 class="page-title">{userLang === 'de' ? "Regeln & Nutzungsbedingungen" : "Rules & Terms of Service"}</h1>
      <div class="title-underline"></div>
      <p class="subtitle">
        {userLang === 'de' 
          ? "Bitte lies dir diese Bestimmungen sorgfältig durch" 
          : "Please read these terms carefully"}
      </p>
    </header>

    <div class="terms-content">
      <section class="terms-section">
        <h2 class="section-title">
          {userLang === 'de' ? "Server Regeln" : "Server Rules"}
        </h2>
        <div class="rules-list">
          <div class="rule-item">
            <span class="rule-number">1</span>
            <p>{userLang === 'de' 
              ? "Hacking ist verboten. (X-Ray, Hackclients etc.) – Wir haben ein Anticheat-System." 
              : "Hacking is prohibited. (X-Ray, hack clients, etc.) – We have an anti-cheat system."}
            </p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">2</span>
            <p>{userLang === 'de' 
              ? "Doppelte Accounts sind verboten. (z.B. für mehr Claims, Chunkloading)" 
              : "Double accounts are prohibited. (e.g., for more claims, chunk loading)"}
            </p>
          </div>
        </div>
      </section>

      <section class="terms-section">
        <h2 class="section-title">
          {userLang === 'de' ? "Voicechat & Minecraft-Chat Regeln" : "Voice Chat & Minecraft Chat Rules"}
        </h2>
        <div class="rules-list">
          <div class="rule-item">
            <span class="rule-number">1</span>
            <p>{userLang === 'de' ? "Kein Spam" : "No spam"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">2</span>
            <p>{userLang === 'de' ? "Keine Belästigung" : "No harassment"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">3</span>
            <p>{userLang === 'de' ? "Keine Werbung jeglicher Art" : "No advertising of any kind"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">4</span>
            <p>{userLang === 'de' ? "Keine Hassrede oder Diskriminierung" : "No hate speech or discrimination"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">5</span>
            <p>{userLang === 'de' ? "Keine Todesdrohungen" : "No death threats"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">6</span>
            <p>{userLang === 'de' ? "Kein Teilen von privaten Informationen anderer" : "No sharing of others' private information"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">7</span>
            <p>{userLang === 'de' ? "Keine Ausgabe anderer Personen" : "No impersonation of others"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">8</span>
            <p>{userLang === 'de' ? "Keine Banumgehung" : "No ban evasion"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">9</span>
            <p>{userLang === 'de' ? "Keine falschen Informationen an das Team" : "No false information to the team"}</p>
          </div>
          
          <div class="rule-item">
            <span class="rule-number">10</span>
            <p>{userLang === 'de' 
              ? "Belästigung im Voice-Chat wird nicht toleriert und wird zu einem Bann führen." 
              : "Harassment in voice chat will not be tolerated and will lead to a ban."}
            </p>
          </div>
        </div>
      </section>
      
      <section class="terms-section">
        <h2 class="section-title">
          {userLang === 'de' ? "Nutzungsbedingungen für Valeqs.de" : "Terms of Use for Valeqs.de"}
        </h2>
        <p class="terms-intro">
          {userLang === 'de' 
            ? "Durch das Betreten und Nutzen des Minecraft Servers valeqs.de erklärst du dich mit den folgenden Regeln und Bedingungen einverstanden." 
            : "By entering and using the Minecraft server valeqs.de, you agree to the following rules and conditions."}
        </p>
        
        <div class="legal-section">
          <h3 class="legal-title">{userLang === 'de' ? "Haftungsausschluss" : "Disclaimer"}</h3>
          <ul class="legal-list">
            <li>{userLang === 'de' 
              ? "Der Betreiber dieses Servers übernimmt keine Haftung für Ingame-Verluste, technische Probleme oder sonstige Schäden." 
              : "The operator of this server assumes no liability for in-game losses, technical problems, or other damages."}
            </li>
            <li>{userLang === 'de' 
              ? "Die Nutzung des Servers erfolgt auf eigene Gefahr." 
              : "The use of the server is at your own risk."}
            </li>
            <li>{userLang === 'de' 
              ? "Änderungen an den Regeln und Bedingungen können jederzeit vorgenommen werden." 
              : "Changes to the rules and conditions can be made at any time."}
            </li>
            <li>{userLang === 'de' 
              ? "Verstöße gegen die Regeln können zum Ausschluss vom Server führen." 
              : "Violations of the rules can lead to exclusion from the server."}
            </li>
          </ul>
        </div>
        
        <div class="legal-section">
          <h3 class="legal-title">{userLang === 'de' ? "Datenschutz" : "Privacy"}</h3>
          <ul class="legal-list">
            <li>{userLang === 'de' 
              ? "Es werden keine persönlichen Daten der Spieler gespeichert, außer den für den Betrieb des Servers notwendigen Informationen (z.B. Minecraft-UUID, IP-Adresse zur Verbindungssicherheit)." 
              : "No personal data of players is stored, except for the information necessary for the operation of the server (e.g., Minecraft UUID, IP address for connection security)."}
            </li>
            <li>{userLang === 'de' 
              ? "Diese Daten werden nicht an Dritte weitergegeben und nur so lange gespeichert, wie sie für den Serverbetrieb notwendig sind." 
              : "This data is not shared with third parties and is only stored for as long as necessary for server operation."}
            </li>
            <li>{userLang === 'de' 
              ? "Discord-Nutzungsbedingungen & Datenschutz gelten zusätzlich bei der Teilnahme an der Community." 
              : "Discord Terms of Use & Privacy Policy apply additionally when participating in the community."}
            </li>
          </ul>
        </div>
        
        <div class="legal-section">
          <h3 class="legal-title">{userLang === 'de' ? "EULA & Mojang-Richtlinien" : "EULA & Mojang Guidelines"}</h3>
          <ul class="legal-list">
            <li>{userLang === 'de' 
              ? "Dieser Server hält sich an die Minecraft EULA (https://account.mojang.com/terms)." 
              : "This server adheres to the Minecraft EULA (https://account.mojang.com/terms)."}
            </li>
            <li>{userLang === 'de' 
              ? "Es werden keine Pay-to-Win-Vorteile verkauft." 
              : "No pay-to-win advantages are sold."}
            </li>
            <li>{userLang === 'de' 
              ? "Mit dem Beitritt auf den Minecraft Server valeqs.de akzeptierst du automatisch diese Regeln und Bedingungen." 
              : "By joining the Minecraft server valeqs.de, you automatically accept these rules and conditions."}
            </li>
          </ul>
        </div>
        
        <div class="legal-section">
          <h3 class="legal-title">{userLang === 'de' ? "Erweiterte Regeln für Minderjährige" : "Extended Rules for Minors"}</h3>
          <ul class="legal-list">
            <li>{userLang === 'de' 
              ? "Spieler unter 16 Jahren benötigen die Zustimmung eines Erziehungsberechtigten, um auf dem Server zu spielen." 
              : "Players under 16 years of age need the consent of a parent or guardian to play on the server."}
            </li>
            <li>{userLang === 'de' 
              ? "Mit dem Betreten des Minecraft Servers mit der IP: valeqs.de bestätigt der Spieler, dass diese Zustimmung vorliegt." 
              : "By entering the Minecraft server with the IP: valeqs.de, the player confirms that this consent exists."}
            </li>
            <li>{userLang === 'de' 
              ? "Der Serverbetreiber übernimmt keine Verantwortung für die Richtigkeit dieser Angabe." 
              : "The server operator assumes no responsibility for the accuracy of this information."}
            </li>
            <li>{userLang === 'de' 
              ? "Mit der Nutzung des Voice-Chats bestätigst du, dass du (bzw. deine Eltern) damit einverstanden bist." 
              : "By using the voice chat, you confirm that you (or your parents) agree to this."}
            </li>
          </ul>
        </div>
      </section>
    </div>
  </div>
</Layout>

<style>
  :root {
    --bg-primary: #2c2f33;
    --bg-secondary: #23272a;
    --bg-tertiary: #1a1c1f;
    
    --text-normal: #e3e5e8;
    --text-muted: #99aab5;
    --text-heading: #ffffff;
    
    --accent-subtle: #445166;
    --accent-medium: #586690;
    --accent-strong: #5865b5;
    
    --card-bg: rgba(30, 33, 42, 0.7);
    --card-border: rgba(60, 73, 94, 0.4);
    --shadow-medium: 0 5px 20px rgba(0, 0, 0, 0.15);
  }
  
  /* Page Layout */
  .terms-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem 1.5rem 5rem;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .page-title {
    font-size: 2.75rem;
    font-weight: 700;
    color: var(--text-heading);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }
  
  .title-underline {
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-medium), var(--accent-strong));
    margin: 0 auto 1.5rem;
    border-radius: 3px;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: var(--text-muted);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.5;
  }
  
  /* Terms Sections */
  .terms-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }
  
  .terms-section {
    background-color: var(--card-bg);
    border-radius: 12px;
    padding: 2.5rem;
    box-shadow: var(--shadow-medium);
    border: 1px solid var(--card-border);
  }
  
  .section-title {
    font-size: 1.75rem;
    color: var(--text-heading);
    margin-bottom: 1.5rem;
    font-weight: 600;
    position: relative;
    padding-bottom: 0.5rem;
  }
  
  .section-title:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background-color: var(--accent-medium);
  }
  
  /* Rules List */
  .rules-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .rule-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    background-color: rgba(20, 22, 30, 0.6);
    border-radius: 8px;
    transition: all 0.25s cubic-bezier(0.25, 1, 0.5, 1);
    border: 1px solid rgba(60, 73, 94, 0.2);
  }
  
  .rule-item:hover {
    transform: translateX(5px);
    border-color: var(--accent-subtle);
  }
  
  .rule-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    background-color: var(--accent-subtle);
    color: var(--text-heading);
    border-radius: 50%;
    font-weight: 600;
    flex-shrink: 0;
  }
  
  .rule-item p {
    margin: 0;
    color: var(--text-normal);
    line-height: 1.6;
    font-size: 1.05rem;
  }
  
  /* Terms of Service specific styles */
  .terms-intro {
    font-size: 1.1rem;
    color: var(--text-normal);
    margin-bottom: 2rem;
    line-height: 1.7;
  }
  
  .legal-section {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background-color: rgba(20, 22, 30, 0.6);
    border-radius: 8px;
    border: 1px solid rgba(60, 73, 94, 0.2);
  }
  
  .legal-title {
    font-size: 1.3rem;
    color: var(--text-heading);
    margin-bottom: 1rem;
    font-weight: 600;
  }
  
  .legal-list {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin: 0;
  }
  
  .legal-list li {
    color: var(--text-normal);
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }
  
  .legal-list li:last-child {
    margin-bottom: 0;
  }
  
  /* Responsive Styles */
  @media (max-width: 768px) {
    .terms-container {
      padding: 2rem 1rem 3rem;
    }
    
    .page-title {
      font-size: 2.25rem;
    }
    
    .terms-section {
      padding: 2rem 1.5rem;
    }
    
    .rule-item {
      padding: 0.75rem;
    }
    
    .rule-item p {
      font-size: 1rem;
    }
  }
  
  @media (max-width: 480px) {
    .page-title {
      font-size: 1.75rem;
    }
    
    .subtitle {
      font-size: 1rem;
    }
    
    .terms-section {
      padding: 1.5rem 1rem;
    }
    
    .rule-number {
      width: 25px;
      height: 25px;
      font-size: 0.9rem;
    }
  }
</style>